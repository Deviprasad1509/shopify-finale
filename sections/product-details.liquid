<section class="py-16">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Product Images -->
      <div class="product-images">
        {% if product.featured_image %}
          <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}" class="w-full rounded-lg shadow-lg">
        {% else %}
          <div class="w-full h-96 bg-gray-200 rounded-lg flex items-center justify-center">
            <span class="text-gray-500 text-lg">No Image Available</span>
          </div>
        {% endif %}

        {% if product.images.size > 1 %}
          <div class="grid grid-cols-4 gap-4 mt-4">
            {% for image in product.images offset: 1 limit: 4 %}
              <img src="{{ image | image_url: width: 150 }}" alt="{{ product.title }}" class="w-full rounded cursor-pointer hover:opacity-75 transition-opacity">
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <!-- Product Information -->
      <div class="product-info">
        <h1 class="text-3xl font-bold text-gray-900 mb-4">{{ product.title }}</h1>

        {% if product.metafields.custom.author %}
          <p class="text-lg text-gray-600 mb-4">By <span class="font-semibold">{{ product.metafields.custom.author }}</span></p>
        {% endif %}

        <div class="mb-6">
          <div class="flex items-center gap-4 mb-4">
            <span class="text-4xl font-bold text-green-600">{{ product.price | money }}</span>
            {% if product.compare_at_price %}
              <span class="text-2xl text-gray-500 line-through">{{ product.compare_at_price | money }}</span>
              <span class="bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm font-semibold">
                {{ ((product.compare_at_price - product.price) / product.compare_at_price * 100) | round }}% OFF
              </span>
            {% endif %}
          </div>

          {% if product.available %}
            <p class="text-green-600 font-semibold mb-4">âœ“ In Stock - Available for immediate download</p>
          {% else %}
            <p class="text-red-600 font-semibold mb-4">âœ— Out of Stock</p>
          {% endif %}
        </div>

        <!-- Product Actions -->
        {% if product.available %}
          <div class="flex gap-4 mb-8">
            <form method="post" action="/cart/add" class="flex-1">
              <input type="hidden" name="id" value="{{ product.variants.first.id }}">
              <button type="submit" class="btn w-full">
                Add to Cart
              </button>
            </form>

            <form method="post" action="/cart/add" class="flex-1">
              <input type="hidden" name="id" value="{{ product.variants.first.id }}">
              <input type="hidden" name="return_to" value="/checkout">
              <button type="submit" class="btn-buy-now w-full">
                Buy Now
              </button>
            </form>
          </div>
        {% endif %}

        <!-- Product Description -->
        <div class="prose prose-lg max-w-none mb-8">
          {{ product.description }}
        </div>

        <!-- Product Details -->
        <div class="border-t pt-8">
          <h3 class="text-xl font-semibold mb-4">Product Details</h3>
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
              <span class="font-semibold">Product Type:</span>
              <span class="text-gray-600">{{ product.type | default: 'Digital Product' }}</span>
            </div>
            <div>
              <span class="font-semibold">Vendor:</span>
              <span class="text-gray-600">{{ product.vendor | default: 'SR Enterprises' }}</span>
            </div>
            {% if product.tags.size > 0 %}
              <div class="col-span-2">
                <span class="font-semibold">Tags:</span>
                <div class="flex flex-wrap gap-2 mt-2">
                  {% for tag in product.tags %}
                    <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-xs">{{ tag }}</span>
                  {% endfor %}
                </div>
              </div>
            {% endif %}
          </div>
        </div>

        <!-- Download Information -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mt-8">
          <h4 class="text-lg font-semibold text-blue-900 mb-2">ðŸ“¥ Download Information</h4>
          <ul class="text-blue-800 space-y-2">
            <li>â€¢ Instant download after purchase</li>
            <li>â€¢ Compatible with all devices</li>
            <li>â€¢ Lifetime access to your purchase</li>
            <li>â€¢ Email delivery within minutes</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Product Details",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_related_products",
      "label": "Show Related Products",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_product_tags",
      "label": "Show Product Tags",
      "default": true
    }
  ]
}
{% endschema %}