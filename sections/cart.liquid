<section class="cart-section">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-4xl font-bold text-gray-900 mb-8 text-center">Your Shopping Cart</h1>

      {% if cart.item_count > 0 %}
        <div class="cart-content">
          <!-- Cart Items -->
          <div class="cart-items space-y-6">
            {% for item in cart.items %}
              <div class="cart-item bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center gap-6">
                  <!-- Product Image -->
                  <div class="w-24 h-24 flex-shrink-0">
                    {% if item.image %}
                      <img src="{{ item.image | image_url: width: 100 }}" alt="{{ item.product.title }}" class="w-full h-full object-cover rounded-lg">
                    {% else %}
                      <div class="w-full h-full bg-gray-200 rounded-lg flex items-center justify-center">
                        <span class="text-gray-500 text-sm">No Image</span>
                      </div>
                    {% endif %}
                  </div>

                  <!-- Product Details -->
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">
                      <a href="{{ item.url }}" class="hover:text-green-600 transition-colors">
                        {{ item.product.title }}
                      </a>
                    </h3>

                    {% if item.product.metafields.custom.author %}
                      <p class="text-sm text-gray-600 mb-2">By {{ item.product.metafields.custom.author }}</p>
                    {% endif %}

                    <div class="flex items-center gap-4">
                      <span class="text-xl font-bold text-green-600">{{ item.price | money }}</span>

                      <!-- Quantity Controls -->
                      <div class="flex items-center gap-2">
                        <form method="post" action="/cart/change" class="flex items-center gap-2">
                          <input type="hidden" name="id" value="{{ item.key }}">
                          <button type="submit" name="quantity" value="{{ item.quantity | minus: 1 }}" class="w-8 h-8 bg-gray-200 hover:bg-gray-300 rounded flex items-center justify-center text-gray-700" {% if item.quantity <= 1 %}disabled{% endif %}>âˆ’</button>
                          <input type="number" name="quantity" value="{{ item.quantity }}" min="1" max="{{ item.variant.inventory_quantity }}" class="w-16 text-center border border-gray-300 rounded px-2 py-1">
                          <button type="submit" name="quantity" value="{{ item.quantity | plus: 1 }}" class="w-8 h-8 bg-gray-200 hover:bg-gray-300 rounded flex items-center justify-center text-gray-700">+</button>
                        </form>
                      </div>

                      <!-- Remove Item -->
                      <form method="post" action="/cart/change" class="ml-4">
                        <input type="hidden" name="id" value="{{ item.key }}">
                        <input type="hidden" name="quantity" value="0">
                        <button type="submit" class="text-red-600 hover:text-red-800 transition-colors">
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                          </svg>
                        </button>
                      </form>
                    </div>
                  </div>

                  <!-- Item Total -->
                  <div class="text-right">
                    <span class="text-xl font-bold text-gray-900">{{ item.line_price | money }}</span>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>

          <!-- Cart Summary -->
          <div class="cart-summary bg-white rounded-lg shadow-md p-6">
            <h2 class="text-2xl font-semibold text-gray-900 mb-6">Order Summary</h2>

            <div class="space-y-4">
              <div class="flex justify-between">
                <span>Subtotal ({{ cart.item_count }} item{{ cart.item_count | pluralize: '', 's' }})</span>
                <span class="font-semibold">{{ cart.total_price | money }}</span>
              </div>

              {% if cart.total_discounts > 0 %}
                <div class="flex justify-between text-green-600">
                  <span>Discount</span>
                  <span>-{{ cart.total_discounts | money }}</span>
                </div>
              {% endif %}

              <div class="border-t pt-4">
                <div class="flex justify-between text-xl font-bold">
                  <span>Total</span>
                  <span class="text-green-600">{{ cart.total_price | money }}</span>
                </div>
              </div>
            </div>

            <div class="mt-8 space-y-4">
              <a href="/checkout" class="btn w-full text-center block">
                Proceed to Checkout
              </a>

              <a href="/collections/all" class="btn-buy-now w-full text-center block">
                Continue Shopping
              </a>
            </div>
          </div>
        </div>
      {% else %}
        <!-- Empty Cart -->
        <div class="text-center py-16">
          <div class="mb-8">
            <svg class="w-24 h-24 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.1 5H19M7 13v8a2 2 0 002 2h10a2 2 0 002-2v-3"></path>
            </svg>
          </div>

          <h2 class="text-3xl font-bold text-gray-900 mb-4">Your cart is empty</h2>
          <p class="text-gray-600 mb-8 max-w-md mx-auto">
            Looks like you haven't added any items to your cart yet. Start shopping to find amazing digital products!
          </p>

          <a href="/collections/all" class="btn">
            Start Shopping
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Cart",
  "tag": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_continue_shopping",
      "label": "Show continue shopping button",
      "default": true
    }
  ]
}
{% endschema %}