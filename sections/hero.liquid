<section class="hero">
  <div class="container">
    <div class="hero-content">
      <h1>Welcome to SR Enterprises</h1>
      <p>Your trusted source for quality digital products and premium ebooks. Discover our extensive collection of digital content designed to enhance your knowledge and skills.</p>
      <div class="hero-actions">
        <a href="/collections/all" class="btn">Shop Now</a>
        <a href="/pages/about" class="btn-secondary">Learn More</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to SR Enterprises"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Your trusted source for quality digital products and premium ebooks. Discover our extensive collection of digital content designed to enhance your knowledge and skills."
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link",
      "default": "/pages/about"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    }
  ]
}
{% endschema %}

<style>
.hero-content {
  max-width: 48rem;
  margin: 0 auto;
  text-align: center;
}

.hero-actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
  margin-top: 2rem;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  color: white;
  border: 2px solid rgba(255, 255, 255, 0.3);
  padding: 1rem 2rem;
  border-radius: 0.75rem;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
}

.btn-secondary:hover {
  background: rgba(255, 255, 255, 0.2);
  border-color: rgba(255, 255, 255, 0.5);
}

@media (max-width: 640px) {
  .hero-actions {
    flex-direction: column;
    align-items: center;
  }

  .btn, .btn-secondary {
    width: 100%;
    max-width: 280px;
  }
}
</style>